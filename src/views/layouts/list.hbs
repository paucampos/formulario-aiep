<h2 class="text-center mb-3">Lista Pacientes</h2>
<div class="row">

  <div class="col-md-6 offset-md-3">
    <table class="table text-white">
      <thead>
        <tr>
          <th scope="col">Rut</th>
          <th scope="col">Nombres</th>
          <th scope="col">Apellidos</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each fichas}}
          <tr>
            <th scope="row">{{rut}}</th>
            <td> {{nombres}}</td>
            <td>
              {{apellidos}}
            </td>
            <td>
              <button class="btn bg-info mb-2">Editar</button>
              <button class="btn bg-danger mb-2">Eliminar</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>